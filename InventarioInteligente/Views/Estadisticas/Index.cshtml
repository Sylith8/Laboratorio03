<h3>1. Reporte de Precios</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in ViewBag.ProductosPorPrecio)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>₡@producto.Precio</td>
                <td>@producto.Stock</td>
            </tr>
        }
    </tbody>
</table>

<h3>2. Análisis de Costos</h3>

<div class="alert alert-info">
    <strong>Precio promedio de los productos:</strong>
    ₡@ViewBag.PrecioPromedio
</div>

<h3>3. Valoración del Inventario</h3>

<div class="alert alert-success">
    <strong>Valor total del inventario:</strong>
    ₡@ViewBag.ValorTotalInventario
</div>

<h3>4. Alerta de Stock Crítico (Menos de 5 unidades)</h3>

@if (ViewBag.ProductosStockCritico.Count > 0)
{
    <table class="table table-bordered table-warning">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in ViewBag.ProductosStockCritico)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Stock</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">
        No hay productos con stock crítico.
    </div>
}
