
@model IEnumerable<InventarioInteligente.Models.Producto>
<h2>Productos</h2>
<a class="btn btn-success mb-2" href="/Productos/Create">Nuevo Producto</a>
<form method="get" class="mb-2">
 <input name="buscar" class="form-control" placeholder="Buscar..." />
</form>
<table class="table table-striped">
<tr><th>Nombre</th><th>Precio</th><th>Stock</th><th>Acciones</th></tr>
@foreach(var p in Model){
<tr>
<td>@p.Nombre</td>
<td>@p.Precio</td>
<td>@p.Stock</td>
<td>
<a class="btn btn-warning btn-sm" href="/Productos/Edit/@p.Id">Editar</a>
<a class="btn btn-danger btn-sm" href="/Productos/Delete/@p.Id">Eliminar</a>
</td>
</tr>
}
</table>
